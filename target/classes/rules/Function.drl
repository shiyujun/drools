package rules;
import cn.org.zhixiang.entity.User
import org.drools.core.WorkingMemory
import org.drools.core.definitions;

rule "test1"
    when

    then
      insert(new User("赵六",12));
      System.err.println("创造赵六");
end

rule "test2"
    when
       $u:User(name=="赵六")
    then
        $u.setName("王五");
        update($u);
        System.err.println("赵六");
end

rule "test3"
    when
         $u:User(name=="王五")
    then
        System.err.println("王五");
        retract($u);
end

rule "test4"
    when
         $u:User(name=="王五")
    then
        System.err.println("王五删除删除之后"+$u.getName());
end




